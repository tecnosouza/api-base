{
    "name": "sgt-api",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon src/server.js",
        "test": "cross-env NODE_ENV=test jest --detectOpenHandles --coverage --coverageDirectory=coverage",
        "lint": "eslint -c src/eslint.config.mjs . --fix --ext .js,.jsx,.ts,.tsx",
        "migrate": "yarn sequelize db:migrate",
        "seed": "yarn sequelize-cli db:seed:all"
    },
    "_moduleAliases": {
        "@root": "./",
        "@src": "./src",
        "@database": "./src/database",
        "@controllers": "./src/controllers",
        "@dtos": "./src/dtos",
        "@helpers": "./src/helpers",
        "@middleware": "./src/middleware",
        "@models": "./src/models",
        "@routes": "./src/routes",
        "@scripts": "./src/scripts",
        "@services": "./src/services",
        "@utils": "./src/utils"
    },
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "cors": "^2.8.5",
        "dotenv": "^17.2.1",
        "express": "^5.1.0",
        "express-validator": "^7.2.1",
        "i18n": "^0.15.2",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "multer": "^2.0.2",
        "mysql2": "^3.14.4",
        "nodemailer": "^7.0.6",
        "pg": "^8.16.3",
        "sequelize": "^6.37.7",
        "sqlite3": "^5.1.7",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.31.0",
        "cross-env": "^7.0.3",
        "eslint": "^9.31.0",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "jest": "^30.0.4",
        "nodemon": "^3.1.4",
        "sequelize-cli": "^6.6.3",
        "pg-dump": "^0.10.0"
    }
}
